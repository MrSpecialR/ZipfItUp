@model ZipfItUp.DataTranfer.WordInfo

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<div class="row">
        <canvas id="lineChart" height=100px width="400px"></canvas>

    <script>
        var ctx = document.getElementById("lineChart");
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @ViewBag.Json,
                datasets: [{
                    label: '# of Votes',
                    data: @Model.OccurancesJSON,
                    backgroundColor: 'rgba(0, 99, 132, 0.2)',
                    borderColor: 'rgba(0,99,132,1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero:true
                        }
                    }]
                }
            }
        });
    </script>
</div>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
              
            </th>
            <th>
               
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Words)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WordString)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Occurances)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
